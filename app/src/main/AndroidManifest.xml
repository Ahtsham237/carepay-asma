    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ngologo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.carepay.activity.ngo.NGOMainScreen">

        </activity>
        <activity android:name="com.example.carepay.activity.admin.AdminActivity" >

        </activity>
        <activity android:name="com.example.carepay.activity.signup.SignUp"
            android:theme="@style/AppTheme">

        </activity>
        <activity android:name="com.example.carepay.activity.login.LogIn"
            android:theme="@style/AppTheme">

        </activity>
        <activity android:name="com.example.carepay.activity.splash.SplashScreen"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.carepay.activity.user.MainActivity"
            android:theme="@style/AppTheme" >


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <TextView
        android:text="Sign Up"
        android:gravity="center"
        android:background="@color/darker"
        android:visibility="gone"
        android:textColor="#fff"
        android:textSize="@dimen/_18ssp"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/_10sdp"
        android:layout_height="?attr/actionBarSize"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_height="match_parent">
            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:src="@drawable/ngologo"
                android:layout_marginTop="@dimen/_50sdp"
                android:layout_centerHorizontal="true"/>

            <androidx.cardview.widget.CardView

                app:cardElevation="@dimen/_10sdp"
                android:layout_alignParentBottom="true"
                android:elevation="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical"


                    android:layout_height="wrap_content">
                    <EditText
                        android:drawableLeft="@drawable/loginname"
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:paddingBottom="@dimen/_7sdp"
                        android:drawablePadding="@dimen/_5sdp"

                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingTop="@dimen/_7sdp"
                        android:background="@drawable/bordr"
                        android:hint="Your name"
                        android:inputType="textPersonName"
                        android:textSize="@dimen/_12ssp"
                        android:textColorHint="#000" />
                    <EditText
                        android:id="@+id/email"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:paddingBottom="@dimen/_7sdp"
                        android:drawablePadding="@dimen/_5sdp"
                        android:drawableLeft="@drawable/loginemail"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingTop="@dimen/_7sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12ssp"
                        android:background="@drawable/bordr"
                        android:hint="Your email"
                        android:inputType="textEmailAddress"
                        android:textColorHint="#000" />


                    <EditText
                        android:visibility="gone"
                        android:id="@+id/account_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:drawableLeft="@drawable/ic_credit_card_black_24dp"
                        android:textSize="@dimen/_12ssp"
                        android:background="@drawable/bordr"
                        android:drawablePadding="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:paddingBottom="@dimen/_7sdp"
                        android:paddingLeft="@dimen/_10sdp"

                        android:paddingTop="@dimen/_7sdp"
                        android:hint="Account Number"
                        android:inputType="number"

                        android:textColorHint="#000" />
                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:drawableLeft="@drawable/loginpassword"
                        android:textSize="@dimen/_12ssp"
                        android:background="@drawable/bordr"
                        android:drawablePadding="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:paddingBottom="@dimen/_7sdp"
                        android:paddingLeft="@dimen/_10sdp"

                        android:paddingTop="@dimen/_7sdp"
                        android:hint="Your password"
                        android:inputType="textPassword"

                        android:textColorHint="#000" />


                    <Button
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:id="@+id/uploadimage"
                        android:text="Upload Image"
                        android:textColor="#fff"
                        android:background="@drawable/background"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:layout_height="@dimen/_30sdp">

                    </Button>

                    <ImageView
                        android:id="@+id/signupbutton"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_gravity="center"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/forwardround"
                        android:src="@drawable/signupbutton">
                    </ImageView>
                    <TextView
                        android:id="@+id/alreadyaccountlogin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="Already have account? Sign In"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:textColor="#000"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".activity.login.LogIn">
    <TextView
        android:text="Sign In"
        android:gravity="center"
        android:background="@color/darker"
        android:visibility="gone"
        android:textColor="#fff"
        android:textSize="@dimen/_18ssp"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/_10sdp"
        android:layout_height="?attr/actionBarSize"/>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_60sdp"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ngologo" />
        </LinearLayout>
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="Welcome"
            android:textColor="#ffff"
            android:textSize="@dimen/_15sdp" />
    </LinearLayout>
    <androidx.cardview.widget.CardView
        app:cardElevation="@dimen/_10sdp"
        android:layout_alignParentBottom="true"
        android:elevation="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical"
            >


            <EditText

                android:id="@+id/namelogin"
                android:drawableLeft="@drawable/loginemail"
                android:drawablePadding="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/bordr"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingTop="@dimen/_7sdp"
                android:paddingBottom="@dimen/_7sdp"
                android:textColorHint="#000"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_12ssp" />


            <EditText
                android:id="@+id/signinpassword"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:background="@drawable/bordr"
                android:drawablePadding="@dimen/_5sdp"

                android:hint="Password"
                android:drawableLeft="@drawable/loginpassword"

                android:inputType="textPassword"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_7sdp"
                android:textColorHint="#000"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:gravity="center"
                android:id="@+id/forgetpassword"
                android:textSize="@dimen/_10sdp"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Forget Password?"></TextView>

            <TextView
                android:id="@+id/signinbutton"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background"

                android:gravity="center"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:text="SIGN IN"
                android:textColor="#fff"
                android:textSize="@dimen/_12sdp" />





            <TextView
                android:id="@+id/textView11"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:text=" Or Login with"
                android:textColor="#ffff"
                android:textSize="@dimen/_8sdp" />

            <com.google.android.gms.common.SignInButton
                android:id="@+id/sign_in_button"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:gravity="center"
                android:id="@+id/notaccountyet"
                android:textSize="@dimen/_12ssp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_100sdp"
                android:text="Not account yet? create one"></TextView>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>